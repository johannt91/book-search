  "dependencies": {
    "apollo-boost": "^0.4.9",
    "apollo-server-express": "^2.23.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.12.7"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
